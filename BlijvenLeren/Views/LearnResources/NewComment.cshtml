@model BlijvenLeren.Models.Comment
@using BlijvenLeren.Models;

@{
    ViewData["Title"] = "AddComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add your comment here</h1>

@*<h4>Comment</h4>*@
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CommentText" class="control-label">Comment</label>
                <textarea asp-for="CommentText" class="form-control" rows="4"></textarea>
                <span asp-validation-for="CommentText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LearnResourceId" type="hidden" />
                <input asp-for="Status" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save comment" class="btn btn-primary" />
            </div>

            @if(User.IsInRole(BlijvenLerenRole.Extern))
            {
                <p class="text-danger">Your submission will be reviewed before publishing</p>
            }

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
